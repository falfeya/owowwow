@using CRM.Models;
@model IEnumerable<Application>

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/style1.css" />
    <link rel="stylesheet" href="~/css/style2.css" />
    <link rel="stylesheet" href="~/css/styleWorker.css" />
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&family=Jost:wght@300&display=swap" rel="stylesheet">
</head>

<body>
    <header class="gray-header">
        <h10>CRM - проект</h10>        
    </header>
    
    
    <hr class="horizontal-line">
   

    <div class="sidebar">
        <nav>
            <ul>
                <li><a class="nav__link1" asp-controller="Worker" asp-action="Index">Рабочий стол</a></li>
                <li><a class="nav__link1" asp-controller="Worker" asp-action="Index">Главная</a></li>
                <li><a class="nav__link1" asp-controller="Worker" asp-action="Index">Проекты</a></li>
                <li><a class="nav__link1" asp-controller="Worker" asp-action="Index">Услуги</a></li>
                <li><a class="nav__link1" asp-controller="Worker" asp-action="Index">Блог</a></li>
            </ul>
        </nav>
    </div>

    <section class="work__sheet">
        <table class="table__content">
            <tr class="table__name">
                <th>Номер заявки</th>
                <th>Время заявки</th>
                <th>Имя</th>
                <th>Текст заявки</th>
                <th>Контакты</th>
                <th>Статус</th>
            </tr>
            @if (Model != null)
            {
                foreach (var note in Model)
                {
                    <tr class="tabble">
                        <td>@note.Id</td>
                        <td>@note.Data</td>
                        <td>@note.Name</td>
                        <td>@note.Text</td>
                        <td>@note.Contact</td>
                        <td>@note.Status</td>                       
                    </tr>
                }
            }
        </table>
        </section>
</body>
